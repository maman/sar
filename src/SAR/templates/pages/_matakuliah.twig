{% extends 'base.twig' %}

{% block pagetitle %}Progress Mata Kuliah {{ namaMatkul }}{% endblock %}

{% block content %}
{% include 'components/_header.twig' %}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Details for {{ namaMatkul }}</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
				<i class="fa fa-bell fa-fw"></i> Progress Pembuatan
				</div>
				<!-- /.panel-heading -->
				<div class="panel-body">
					<div class="list-group">
						<a href="{{ currPath }}/silabus" class="list-group-item list-group-item-success">
							<i class="fa fa-check fa-fw text-success"></i> Silabus
							<span class="pull-right label label-success">finished: 4 minutes ago</span>
						</a>
						<a href="{{ currPath }}/rpp" class="list-group-item list-group-item-warning">
							<i class="fa fa-exclamation fa-fw text-danger"></i> Rancangan Pembelajaran
							<span class="pull-right label label-danger">unfinished</span>
							</span>
						</a>
						<a href="{{ currPath }}/agenda" class="list-group-item list-group-item-warning">
							<i class="fa fa-exclamation fa-fw text-danger"></i> Agenda Pembelajaran
							<span class="pull-right label label-danger">unfinished</span>
							</span>
						</a>
						<a href="{{ currPath }}/evaluasi" class="list-group-item list-group-item-warning">
							<i class="fa fa-exclamation fa-fw text-danger"></i> Rencana Evaluasi Pembelajaran
							<span class="pull-right label label-danger">unfinished</span>
							</span>
						</a>
						<a href="{{ currPath }}/task" class="list-group-item list-group-item-warning">
							<i class="fa fa-exclamation fa-fw text-danger"></i> Rencana Task/Project Pembelajaran
							<span class="pull-right label label-danger">unfinished</span>
							</span>
						</a>
						<a href="{{ currPath }}/jadwal" class="list-group-item list-group-item-warning">
							<i class="fa fa-exclamation fa-fw text-danger"></i> Jadwal Aktivitas Belajar
							<span class="pull-right label label-danger">unfinished</span>
							</span>
						</a>
					</div>
				</div>
				<!-- /.panel-body -->
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laboriosam voluptatem dolor nemo eveniet, odio porro dignissimos sint, dolore ut facilis iure accusamus mollitia? At illum consequuntur, cum modi obcaecati voluptatum.</p>
		</div>
	</div>
</div>
{% endblock content %}
