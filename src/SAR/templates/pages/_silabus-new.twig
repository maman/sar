{% extends 'base.twig' %}

{% block pagetitle %}Silabus untuk {{ namaMatkul }} {% endblock %}

{% block content %}
{% include 'components/_header.twig' with {'state': 'mini'}%}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Silabus untuk {{ namaMatkul }}</h1>
			{% include 'components/widgets/_breadcrumb.twig' %}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<form action="#" method="POST" id="silabusForm">
				{% if silabus is defined %}
				<input type="hidden" name="idSilabus" value="{{ silabus.idSilabus }}">
				{% endif %}
				<div class="form-group">
					<label for="pokok-bahasan"><h3>Pokok Bahasan Mata Kuliah</h3></label>
					<textarea name="pokok-bahasan" id="pokok-bahasan" cols="30" rows="10" class="form-control input-lg input-plain" data-multiline="disable">{{ silabus.pokokBahasan }}</textarea>
				</div>
				<div class="form-group">
					<label for="tujuan"><h3>Tujuan Mata Kuliah</h3></label>
					<textarea name="tujuan" id="tujuan" cols="30" rows="10" class="form-control input-lg input-plain" data-multiline="disable">{{ silabus.tujuan }}</textarea>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<input type="submit" class="btn btn-block btn-lg btn-success">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% include 'components/sidebar/_silabus-helper.twig' with {'pageTitle': 'Silabus', 'explanation': 'Berisi tentang ... mata kuliah', 'buttonState': 'back'}  %}
{% endblock %}
