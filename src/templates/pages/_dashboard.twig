{% extends 'base.twig' %}

{% block pagetitle %}Dashboard{% endblock %}

{% block content %}
{% include 'components/_header.twig' %}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			{% if username is not empty %}
			<h1 class="page-header">Your Latest Activity</h1>
			{% else %}
			<h1 class="page-header">Current Status</h1>
			{% endif %}
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<div class="row">
		<div class="col-lg-6">
		{% include 'components/widgets/_notification-widget.twig' %}
		</div>
	</div>
</div>
{% endblock content %}
